<div id="user-nav" class="nav pull-right">
  <% if user_signed_in? %>
    <li class="dropdown" id="user-menu">
      <a href="#user-menu" class="dropdown-toggle", data-toggle="dropdown">
        <%= current_user.username %>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t("menu.my_home_page"), '#' %></li>
        <li><%= link_to t("common.sign_out"), destroy_user_session_path, :method => :delete %></li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to t("common.sign_up"), new_user_registration_path %></li>
    <li><%= link_to t("common.sign_in"), new_user_session_path %></li>
  <% end %>
</div>
