<%= simple_form_for [:cpanel, @node], html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <div class="form-input">
    <%= f.input :name %><br />
    <%= f.input :summary %><br />
    <%= f.association :section %><br />
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
