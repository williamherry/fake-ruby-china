<h1>Listing nodes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Section</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.name %></td>
        <td><%= node.summary %></td>
        <td><%= node.section.name %></td>
        <td><%= link_to 'Show', [:cpanel, node] %></td>
        <td><%= link_to 'Edit', edit_cpanel_node_path(node) %></td>
        <td><%= link_to 'Destroy', [:cpanel, node], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

