<%= simple_form_for(@topic, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :node %><br>
    <%= f.input :title %><br>
    <%= f.input :content %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>

<% end %>
